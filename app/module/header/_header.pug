mixin header()
	//block header
	.header
		.main-cont
			.head
				a(href="/").head-logo
					img(src="img/logo.svg", alt="")
				.head-nav
					-
						var items = [
						"главная",
						"cамолеты",
						"запчасти",
						"лазерная резка",
						"доставка",
						];
					each item,i in items
						a(href="#" class=i === 1 ? 'head-nav__el--active' : '').head-nav__el #{item}
					.modal-get.head-nav__el(data-modal="warranty") гарантия
					.modal-get.head-nav__el(data-modal="contact") контакты
	//block header end