.item-title
	text-shadow 0 1px 0 rgba(255, 255, 255, 0.5)
	font-family "Roboto Slab"
	@extend .type--lgx
	text-align center

.item-slider
	margin: 40px 0

.arrow
	flex(mid)
	.icon
		fill white
		size 40px
	padding: 0 0 40px 0

.section
	padding: 60px 0

.advant
	display: grid
	grid-gap 15%
	grid-template-columns: repeat(3, 1fr)

.advant__el
	f()
	align-items center
	fl()

.advant__el-icon
	.icon
		size 70px
	margin-bottom: 20px

.advant__el-title
	@extend .type--md
	font-weight 700
	text-transform uppercase
